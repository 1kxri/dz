#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <locale.h>

#define SIZE 7
#define MAXSIZE 100
#define _USE_MATH_DEFINES 


int count_row_pairs(int (*arr)[SIZE]) 
{
    int count = 0;
    for (int i = 0; i < SIZE; i++) {
        for (int j = 0; j < SIZE - 1; j++) {
            if (arr[i][j] == arr[i][j + 1]) {
                count++;
            }
        }
    }
    return count;
}

int count_col_pairs(int (*arr)[SIZE]) {
    int count = 0;
    for (int j = 0; j < SIZE; j++) {
        for (int i = 0; i < SIZE - 1; i++) {
            if (arr[i][j] == arr[i + 1][j]) {
                count++;
            }
        }
    }
    return count;
}

int count_col_diag(int (*arr)[SIZE]) {
    int count = 0;
    for (int i = 0; i < SIZE - 1; i++) {
        for (int j = 0; j < SIZE - 1; j++) {
            if (i == j) {
                if (arr[i][j] == arr[i + 1][j + 1]) {
                    count++;
                }
            }
        }
    }
    return count;
}

void max_element(int (*arr)[SIZE])
{
    int col = 0, row = 0;
    int maxx = arr[0][0];
    for (int i = 0; i < SIZE; i++)
    {
        for (int j = 0; j < SIZE; j++)
        {
            if (arr[i][j] > maxx)
            {
                maxx = arr[i][j];
                col = i;
                row = j;
            }
            else if (arr[i][j] == maxx)
            {
                row = i;
                col = j;
            }
        }
    }
    printf("Координаты максимального элемента: [%d][%d]", row + 1, col + 1);
}
int main() {
    setlocale(LC_ALL, "RUS");


    int rows, cols, r, c, R, C;
    float mininrow = 100, maxincol = 0, indiag;
    int found = 0;
    printf("Введите количество строк\n");
    scanf("%d", &rows);
    printf("Введите количество столбцов\n");
    scanf("%d", &cols);
    printf("В какой строке хотите найти минимальный элемент?\n");
    scanf("%d", &r);
    printf("В каком столбце хотите найти наибольший элемент?\n");
    scanf("%d", &c);
    printf("Какое значение хотите найти на диагонали?\n");
    scanf("%f", &indiag);
    float a[MAXSIZE][MAXSIZE];
    for (int i = 0; i < cols; i++) printf("  %d ", i + 1);
    printf("\n");

    for (int i = 0; i < rows; i++) {
        printf("%d", i + 1);
        for (int j = 0; j < cols; j++) {
            a[i][j] = (float)(i + 1) / (j + 1);
            printf(" %.1f", a[i][j]);
            if (i + 1 == r) {
                if (a[i][j] < mininrow) {
                    mininrow = a[i][j];
                }
            }
            if (j + 1 == c) {
                if (a[i][j] > maxincol) {
                    maxincol = a[i][j];
                }
            }
            if (i == j) {
                if (a[i][j] == indiag) {
                    R = i + 1;
                    C = j + 1;
                    found = 1;
                }
            }
        }
        printf("\n");
    }
    printf("Элемент в левом верхнем углу массива: %.1f\n", a[0][0]);
    printf("%.1f\n", mininrow);
    printf("%.1f\n", maxincol);
    if (found == 0)
        printf("Элемент %f не найден\n", indiag);
    else
        printf("Элемент %f найден в строке %d в столбце %d\n", indiag, R, C);



    srand(time(NULL)); 
    int A[SIZE][SIZE];
    int B[SIZE][SIZE];
    int CountA = 0, CountT = 0;
    for (int i = 0; i < SIZE; i++) {
        for (int j = 0; j < SIZE; j++) {
            A[i][j] = -10 + (rand() % 21); 
            printf("%3d ", A[i][j]); 
            if (j == 1)
            {
                if (A[i][j] < -5)
                {
                    CountA++;
                }
            }
        }
        printf("\n");
    }
    printf("\n");
    for (int i = 0; i < SIZE; i++) 
    {
        for (int j = 0; j < SIZE; j++) 
        {
            B[j][i] = A[i][j]; 
        }
    }
    printf("\nТранспонированный массив:\n");
    for (int i = 0; i < SIZE; i++) 
    {
        for (int j = 0; j < SIZE; j++) 
        {
            printf("%3d ", B[i][j]);
        }
        printf("\n");
    }
    printf("количество элементов второго столбца массива, меньших -5: %d\n", CountA);
    printf("Количество одинаковых пар элементов, расположенных в строке: %d\n", count_row_pairs(A));
    printf("Количество одинаковых пар элементов, расположенных в столбце: %d\n", count_col_pairs(A));
    printf("Количество одинаковых пар элементов, расположенных на главной диагонали: %d\n", count_col_diag(A));
    max_element(A);
}
