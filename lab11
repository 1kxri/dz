#define _CRT_SECURE_NO_WARNINGS
#define _USE_MATH_DEFINES
#define N 10
#include <stdio.h>
#include <locale.h>
#include <conio.h>
#include <math.h>
double res(double x)
{
	return pow(x, 2) + 2 * M_PI * cos(M_PI * x);
}
void array(double start, double end, double step, float C[100], int* index)
{
	for (double x = start; x <= end && *index < 100; x += step)
	{
		C[*index] = res(x);
		(*index)++;
	}
}
int main()
{
	setlocale(LC_CTYPE, "RUS");
	float A[N];
	float B[N];
	float temp;
	float sum = 0.0, srarifm;
	for (int i = 0; i < N; i++)
	{
		printf("a[%d] = ", i + 1);
		scanf("%f", &temp);
		A[i] = temp;
	}
	for (int i = 0; i < N; i++)
	{
		B[i] = ceil(A[i]);
	}
	for (int i = 0; i < N; i++)
	{
		printf("\n a[%d] = %f", i, A[i]);
	}
	for (int i = 0; i < N; i++)
	{
		printf("\n индекс |   исходное значение   | новое значение\n");
		printf("%d       |%f               |%f     ", i, A[i], B[i]);
	}
	for (int i = 0; i < N; i++)
	{
		sum += A[i];
	}
	srarifm = sum / N;
	printf("\nСреднее арифметическое массива: %f", srarifm);

	float C[100];
	float srznach1 = 0.0, srznach2 = 0.0, step, start,end;
	double sumpol = 0.0, sumneg = 0.0;
	int chislipol = 0, chisloneg = 0;
	printf("Введите начало:");
	scanf("%f", &start);
	printf("Введите конец:");
	scanf("%f", &end);
	printf("\nВведите шаг табуляции:\n");
	scanf("%lf", &step);
	array(start, end, step, C, 100);
	for (int i = 0; i < 100; i++)
	{
		if (C[i] > 0)
		{
			sumpol += C[i];
			chislipol++;
		}
		else if (C[i] < 0)
		{
			sumneg += C[i];
			chisloneg++;
		}
	}
	printf("Имя массива: C");
	printf("Накопленное значение положительных элементов: %lf", sumpol);
	printf("Количество положмтельных эелементов: %lf", chislipol); 
	printf("Вычисленное среднее значение: %lf", srznach1);

	printf("Накопленное значение положительных элементов: %lf", sumneg);
	printf("Количество положмтельных эелементов: %lf", chisloneg);
	printf("Вычисленное среднее значение: %lf", srznach2);
}
